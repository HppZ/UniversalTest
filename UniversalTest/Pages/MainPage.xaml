<Page
    x:Class="UniversalTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Sight.Windows10.Views.Controls"
    xmlns:control="using:UniversalTest.Control"
    xmlns:animatedPieSlice="using:AnimatedPieSlice"
    mc:Ignorable="d">
    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Background="Aqua" Width="400" Height="400">
            <animatedPieSlice:PieSlice x:Name="pieSlice"
                        TopCenter="200 0"
                        Radius="200"
                        Stroke="Red"
                        SweepAngle ="359"
                        StrokeThickness="4"
                        Fill="Yellow" />
            
            
        </Grid>

    </Grid>

    <Page.Triggers>
        <EventTrigger>
            <BeginStoryboard>
                <Storyboard>
                    <!--<DoubleAnimation Storyboard.TargetName="pieSlice"
                                     Storyboard.TargetProperty="SweepAngle"
                                     EnableDependentAnimation="True"
                                     From="1" To="359" Duration="0:0:3"
                                     AutoReverse="True"
                                     RepeatBehavior="Forever" />-->
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>
</Page>