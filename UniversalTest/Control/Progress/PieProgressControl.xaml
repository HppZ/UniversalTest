<UserControl
    x:Class="UniversalTest.Control.Progress.PieProgressControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pie="using:UniversalTest.Control.Pie"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <SolidColorBrush x:Name="MainBlueColor" Color="#3683F9" />
    </UserControl.Resources>

    <Grid x:Name="ProgressPie">
        <pie:PiePath x:Name="PiePath" Stroke="{StaticResource MainBlueColor}" />
    </Grid>
</UserControl>
