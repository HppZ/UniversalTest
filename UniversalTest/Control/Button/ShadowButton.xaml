<UserControl
    x:Class="UniversalTest.Control.Button.ShadowButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="This"
    d:DesignHeight="26"
    d:DesignWidth="52">

    <Grid Background="Transparent">
        <Image Source="ms-appx:///Assets/ControlAssets/buttonshadow.png" Stretch="Fill" UseLayoutRounding="False" NineGrid="3"></Image>
        <TextBlock Text="{Binding ElementName=This,Path=Text}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
