<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:listview="using:UniversalTest.Control.Listview">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Themes/Resource/BallSlider2.xaml"/>
        <ResourceDictionary Source="ms-appx:///Themes/Resource/ProgressButton.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="listview:PullToFresh">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="listview:PullToFresh">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
